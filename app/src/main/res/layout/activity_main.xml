<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextviewUp"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLength="12"
            android:textColor="#263238"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/op"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#263238"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/down"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_weight="2"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textColor="#263238"
            android:textIsSelectable="true"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="@+id/TextviewUp"
            app:layout_constraintStart_toStartOf="@+id/TextviewUp"
            app:layout_constraintTop_toBottomOf="@+id/op" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#263238"
            android:textSize="40sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <Button
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="Del"
            android:textSize="24sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/clean"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="C"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/neg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="-"
            android:textSize="32sp"
            app:backgroundTint="@null" />


        <Button
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color"
            android:text="/"
            android:textSize="32sp"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <Button
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="7"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="8"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/nine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="9"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/mutl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color"
            android:text="X"
            android:textSize="32sp"
            app:backgroundTint="@null" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <Button
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="4"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="5"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="6"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color"
            android:text="-"
            android:textSize="32sp"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="1"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="2"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="3"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/increes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color"
            android:text="+"
            android:textSize="32sp"
            app:backgroundTint="@null" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/change_color2"
            android:text="0"
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3.5"
            android:background="@drawable/change_color2"
            android:text="."
            android:textSize="32sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@drawable/change_color"
            android:backgroundTint="@null"
            android:text="="
            android:textSize="32sp"
            app:backgroundTint="@null" />


    </LinearLayout>
</LinearLayout>